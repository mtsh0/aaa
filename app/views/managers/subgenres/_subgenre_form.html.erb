<!-- _subgenre_form.html.erb -->

<% if @subgenre.errors.any? %>
  <div class="alert alert-danger">
    <% @subgenre.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
<% end %>

<div class="field col-md-12">
  <%= f.label :name, 'サブジャンル名', class: 'control-label' %>
  <%= f.text_field :name, placeholder: 'サブジャンル123', class: 'form-control' %>
</div><br>
<div class="field col-md-12">
  <%= f.label :genre_id, '所属ジャンル名', class: 'control-label' %><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, class: 'form-control input-lg' %>
</div>
