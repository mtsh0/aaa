<p id="notice"><%= notice %></p>

<h1>Listing Positions</h1>

<table>
  <thead>
    <tr>
      <th>Index</th>
      <th>Show</th>
      <th>New</th>
      <th>Create</th>
      <th>Edit</th>
      <th>Update</th>
      <th>Destroy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.index %></td>
        <td><%= position.show %></td>
        <td><%= position.new %></td>
        <td><%= position.create %></td>
        <td><%= position.edit %></td>
        <td><%= position.update %></td>
        <td><%= position.destroy %></td>
        <td><%= link_to 'Show', position %></td>
        <td><%= link_to 'Edit', edit_position_path(position) %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

