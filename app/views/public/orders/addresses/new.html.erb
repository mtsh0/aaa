<h3>住所登録</h3>
<%= form_for @address, url: public_orders_addresses_create_path do |f| %>

  <%= render partial: 'public/settings/addresses/address_form', locals: {f: f} %>

  <div class="field col-md-12 text-center">
    <%= f.check_box :defaultflg, value: false %>
    <%= f.label :defaultflg, '既定の住所にする'%>
  </div>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="actions text-center">
      <%= f.submit '登録する', class: 'btn btn-default btn-md'%>
    </div>

    <div class="text-center"><%= link_to '戻る', settings_addresses_path, class: 'btn btn-default btn-md' %>
    </div>

<% end %>
</div>
