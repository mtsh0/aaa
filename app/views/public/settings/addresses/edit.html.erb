<div class="row col-md-6 col-md-offset-3">
<!-- <p><strong>BEGIN app/views/public/settings/addresses/edit.html.erb</ -->strong></p>
<%= form_for @address, url: settings_address_path, method: :put do |f| %>

  <%= render partial: 'address_form', locals: {f: f} %>


    <%= f.hidden_field :defaultflg, value: @address.defaultflg %>
    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="actions text-center">
      <%= f.submit '変更する', class: 'btn btn-default btn-md'%>
    </div>

    <div class="text-center"><%= link_to '戻る', settings_addresses_path, class: 'btn btn-default btn-md' %></div>
  </div>

<% end %>
