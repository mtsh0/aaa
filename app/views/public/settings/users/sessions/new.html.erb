
<div id="frame-border" class="col-md-3 col-md-offset-4">

<div>BEGIN app/views/public/settings/users/sessions/new.html.erb</div>

<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, placeholder:'a@gmail.com', autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %><br />
    <%= f.password_field :password, placeholder:'半角英数8文字以上', autocomplete: "off", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="text-center">
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "ログインを記憶する" %>
    </div>
  </div><br>
  <% end -%>
  <!-- <div class="col-md-12"> -->
    <div class="actions">
      <%= f.submit "ログイン", class: 'btn btn-primary btn-md col-md-12 btn-margin' %>
    </div><br><br>
  <!-- </div> -->
<% end %>

<%= link_to "アカウント作成へ", new_registration_path(resource_name), class: 'btn btn-warning btn-md col-md-12 btn-margin' %><br /><br />

<div class="text-center">
<%= link_to "パスワードを忘れましたか?", new_password_path(resource_name) %><br />
</div>


<div>END app/views/public/settings/users/sessions/new.html.erb</div>

</div>

