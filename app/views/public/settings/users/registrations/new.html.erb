<h2>アカウント作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages %>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, placeholder:'a@gmail.com', autocomplete: "email", class: 'form-control' %>
  </div>



  <div class="field">
    <%= f.label :password, 'パスワード' %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder:'半角英数8文字以上', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード再入力' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:'上と同じパスワードを入力', class: 'form-control' %>
  </div><br>

  <div class="actions">
    <%= f.submit "アカウント作成", class: 'btn btn-primary btn-md col-md-12 btn-margin' %>
  </div><br><br>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "#{OmniAuth::Utils.camelize(provider)}で登録", omniauth_authorize_path(resource_name, provider), class: 'btn btn-default btn-md col-md-12 btn-margin' %><br />
      <br />
  <% end -%>
<% end -%>


<%= link_to "ログインへ", new_user_session_path, class: 'btn btn-warning btn-md col-md-12 btn-margin' %><br />

<!-- <div>END app/views/public/settings/users/registrations/new.html.erb</div> -->

</div>
